{
  "name": "automne-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.30.5",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter automne-vue dev",
    "build": "tsx ./scripts/build.ts",
    "up": "taze -r -w",
    "clean": "rimraf packages/automne-vue/dist && rimraf example/dist",
    "lint": "pnpm --filter automne-vue lint",
    "test": "nr --filter automne-vue test",
    "example": "nr --filter example dev",
    "example:build": "nr --filter automne-vue build && nr --filter example build",
    "release": "bumpp package.json packages/**/package.json"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.2",
    "@antfu/ni": "^0.21.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "bumpp": "^9.1.0",
    "concurrently": "^8.0.1",
    "consola": "^2.15.3",
    "eslint": "^8.37.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.1.3",
    "lint-staged": "^13.2.0",
    "pnpm": "^7.30.5",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.9.1",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
